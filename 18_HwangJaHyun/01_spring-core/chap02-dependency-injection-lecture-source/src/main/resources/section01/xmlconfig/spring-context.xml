<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

        <!-- interface는 Bean 등록 불가 -> 상속 받은 자식 클래스를 이용해서 Bean 등록 -->
        <!-- <bean id="account" class="com.my.common.Account"> -->
        <bean id="account" class="com.my.common.PersonalAccount">
            <constructor-arg index="0" value="20"/>
            <constructor-arg index="1" value="110-234-567890"/>
        </bean>

        <!--생성자를 이용해서 bean 등록-->
        <!-- MemberDTO의 5개짜리 생성자를 이용해 생성 -->
        <!--<bean id="member" class="com.my.common.MemberDTO">
            <constructor-arg name="sequence" value="1"/>
            <constructor-arg name="name" value="홍길동"/>
            <constructor-arg name="phone" value="010-1234-5678"/>
            <constructor-arg name="email" value="hong123@gmail.com"/>
            <constructor-arg name="personalAccount">
                <ref bean="account"/> &lt;!&ndash;직접생성X, 참조 : 약한결합, 의존성 주입&ndash;&gt;
            </constructor-arg>
        </bean>-->

        <!-- Setter를 이용한 주입-->
        <!-- 1. 기본생성자를 통해서 비어있는 객체 생성 -->
        <!-- setter 생성-->
        <bean id="member" class="com.my.common.MemberDTO">
            <property name="sequence" value="1"/>
            <property name="name" value="홍길동"/>
            <property name="phone" value="010-1234-5678"/>
            <property name="email" value="hong123@gmail.com"/>
            <property name="personalAccount" ref="account"/>
        </bean>
</beans>
